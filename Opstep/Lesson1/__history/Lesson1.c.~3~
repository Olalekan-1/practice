#include <Lesson1.h>
#FUSES XT, NOWDT, PUT, PROTECT
#use delay(crystal=4M)
#use fast_io(a)
#use fast_io(b)

unsigned int8 y=0;

void sys_init(){
   output_a(0);
   output_b(0);
   set_tris_a(0b000111111);
   set_tris_b(0);
   output_a(0);
   output_b(0);
}

void main()
{

   sys_init();
   
   while(TRUE)
   {
      if(input(pin_a0)==0 {
      for(y=0, y<7; y++) {
      output_toggle(pin_b3);
      delay_ms(300);
      }
      output_low(pin_b3)
      }
      }
      
}
